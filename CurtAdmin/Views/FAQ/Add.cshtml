@{
    ViewBag.Title = "Add FAQ";
    ViewBag.navigation = "_WebsiteNavigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul id="subNav">
    <li>
        <a href="@Url.Content("~/Admin_FAQ/Add")" class="active">Add Question/Answer</a>
    </li>
</ul>
<div id="content_container">
    
    <h2>Add Frequently Asked Question</h2>

    <p id="err">@ViewBag.err</p>
    <form class="form_left" id="add_form" method="post" action="/Admin_FAQ/Save">
        <label for="question">
            Question
            <textarea cols="100" rows="5" id="question" name="question" placeholder="Enter the question here...">@ViewBag.q</textarea>
        </label>
        <span class="clear"></span>
        <label>
            Answer
            <textarea cols="100" rows="10" id="answer" name="answer" placeholder="Enter the answer here...">@ViewBag.a</textarea>
        </label>

        <div id="buttons">
            <a href="/Admin_FAQ/" title="Cancel" id="btnCancel" class="cancel">Cancel</a>
            <input type="submit" id="btnSave" name="btnSave" value="Save" />
        </div>
    </form>
</div>
<script src="/Scripts/admin/faq.js" type="text/javascript"></script>
