@{
    ViewBag.Title = "Edit FAQ";
    ViewBag.navigation = "_WebsiteNavigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    CurtAdmin.FAQ faq = ViewBag.faq;
}
<ul id="subNav">
    <li>
        <a href="@Url.Content("~/FAQ/Add")">Add Question/Answer</a>
    </li>
</ul>
<div id="content_container">
    <h2>Edit @faq.question</h2>

    <p id="err">@ViewBag.err</p>
    <form class="form_left" id="add_form" method="post" action="/FAQ/Save/@faq.faqID">
        <label for="question">
            Question
            <textarea cols="100" rows="5" id="question" name="question" placeholder="Enter the question here...">@((ViewBag.q.Length == 0)?faq.question:ViewBag.f)</textarea>
        </label>
        <span class="clear"></span>
        <label>
            Answer
            <textarea cols="100" rows="10" id="answer" name="answer" placeholder="Enter the answer here...">@((ViewBag.a.Length == 0) ? faq.answer : ViewBag.a)</textarea>
        </label>

        <div id="buttons">
            <a href="/FAQ/" title="Cancel" id="btnCancel" class="cancel">Cancel</a>
            <input type="submit" id="btnSave" name="btnSave" value="Save" />
        </div>
    </form>
</div>
<script src="/Scripts/admin/faq.js" type="text/javascript"></script>