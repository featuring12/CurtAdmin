@{
    ViewBag.Title = "Add";
    ViewBag.navigation = "_BlogNavigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string errors = Request.QueryString.Get("err");
}
<ul id="subNav">
    <li>
        <a href="@Url.Content("~/BlogCategory/Add")" class="active">Add Category</a>
    </li>
</ul>

<div id="content_container">

    <h2>Add Category</h2>
    @if (errors != null && errors.Length > 0)
    {
        <p>@errors</p>
    }
    <form method="post" action="/BlogCategory/Save" class="form_left">
        <label for="name">
            Name
            <input type="text" name="name" id="name" placeholder="Enter the Category Name" value="@((ViewBag.name != null && ViewBag.name.Length > 0) ? ViewBag.name : "")" />
        </label>

        <div class="buttons">
            <input type="submit" id="btnSubmit" name="btnSubmit" value="Save" />
        </div>
    </form>
</div>