@{
    ViewBag.Title = "Forum / Message Board";
    ViewBag.navigation = "_ForumNavigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CurtAdmin.Models.FullGroup> groups = ViewBag.groups;
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.dataTables.min.js")"></script>
<ul id="subNav">
    <li class="add">
        <a href="@Url.Content("~/Forum/AddGroup")">Add Group</a>
    </li>
    <li class="clear"></li>
</ul>
<div id="content_container">
    <h2 id="index_title">Forum Groups</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th style="text-align: center;">Topics</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (CurtAdmin.Models.FullGroup group in groups) {
                <tr>
                    <td>@group.name</td>
                    <td>@group.description</td>
                    <td style="text-align: center;">@group.topics.Count</td>
                    <td style="text-align: center;">
                        <a href="/Forum/EditGroup/@group.forumGroupID" title="Edit">Edit</a> | 
                        <a href="/Forum/Topics/@group.forumGroupID" title="Edit">Topics</a>
                        @if(group.topics.Count == 0) { 
                            <text>|</text> <a href="/Forum/DeleteGroup/@group.forumGroupID" title="Delete" class="delete">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="/Scripts/admin/forum.js" type="text/javascript"></script>