@{
    ViewBag.Title = "News";
    ViewBag.navigation = "_WebsiteNavigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CurtAdmin.NewsItem> news = ViewBag.news;
    int count = 0;
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.dataTables.min.js")"></script>
<ul id="subNav">
    <li>
        <a href="@Url.Content("~/News/Add")">Add News</a>
    </li>
</ul>
<div id="content_container">
    <h2 id="index_title">News</h2>
    <table>
        <thead>
            <tr>
                <th class="hideme">Sort</th>
                <th>Title</th>
                <th>Published Date</th>
                <th>End Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (CurtAdmin.NewsItem item in news) {
                <tr>
                    <td class="hideme">@count++</td>
                    <td>@item.title</td>
                    <td>@((item.publishStart != null) ? String.Format("{0:M/d/yyyy} at {0:h:mm tt}",item.publishStart) : "Not Published")</td>
                    <td>@((item.publishEnd != null) ? String.Format("{0:M/d/yyyy} at {0:h:mm tt}", item.publishEnd) : "No End Date")</td>
                    <td>
                        <a href="/News/Edit/@item.newsItemID" title="Edit">Edit</a> | 
                        <a href="/News/Delete/@item.newsItemID" title="Delete" class="delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="/Scripts/admin/news.js" type="text/javascript"></script>