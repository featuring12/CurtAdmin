@{
    ViewBag.Title = "Add News Item";
    ViewBag.navigation = "_WebsiteNavigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    CurtAdmin.NewsItem news = ViewBag.news;
}
<script type="text/javascript" src="http://ck.curtmfg.com/ckeditor.js"></script>

<ul id="subNav">
    <li>
        <a href="@Url.Content("~/Admin_News/Add")">Add News</a>
    </li>
</ul>
<div id="content_container">
    
    <h2>Edit News Item</h2>

    <p id="err">@ViewBag.err</p>
    <form class="form_left" id="add_form" method="post" action="/Admin_News/Save/@news.newsItemID">
        <label for="title">
            Title
            <input type="text" id="title" name="title" placeholder="Enter the title here..." value="@((ViewBag.t == "") ? news.title : ViewBag.t)" />
        </label>
        <span class="clear"></span>
        <label for="lead">
            Lead
            <textarea cols="100" rows="10" id="lead" name="lead" placeholder="Enter the answer here...">@((ViewBag.l == "") ? news.lead : ViewBag.l)</textarea>
        </label>
        <label for="content">
            Body
            <textarea cols="100" rows="10" id="content" name="content" placeholder="Enter the body here...">@((ViewBag.c == "") ? news.content : ViewBag.c)</textarea>
        </label>

        <label for="publishStart">
            Publish Start
            <input type="text" id="publishStart" name="publishStart" placeholder="Enter the publish date here..." value="@((ViewBag.s == "") ? ((news.publishStart == null) ? "" : String.Format("{0:MM/dd/yyyy hh:mm tt}", news.publishStart)) : ViewBag.s)" />
        </label>

        <label for="publishEnd">
            Publish End (Optional)
            <input type="text" id="publishEnd" name="publishEnd" placeholder="Enter the publish end date here..." value="@((ViewBag.e == "") ? ((news.publishEnd == null) ? "" : String.Format("{0:MM/dd/yyyy hh:mm tt}", news.publishEnd)) : ViewBag.e)" />
        </label>

        <div id="buttons">
            <a href="/Admin_News/" title="Cancel" id="btnCancel" class="cancel">Cancel</a>
            <input type="submit" id="btnSave" name="btnSave" value="Save" />
        </div>
    </form>
</div>
<script src="/Scripts/admin/jquery-ui-timepicker-addon.js" type="text/javascript"></script>
<script src="/Scripts/admin/news.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('#publishStart').datetimepicker({
            ampm: true
        });

        $('#publishEnd').datetimepicker({
            ampm: true
        });

        CKEDITOR.replace('content', {
            filebrowserImageUploadUrl: '/Admin_File/CKUpload',
            filebrowserImageBrowseUrl: '/Admin_File/CKIndex',
            filebrowserWindowWidth: '640',
            filebrowserWindowHeight: '480'
        });
    });
</script>