@{
    ViewBag.Title = "Blocked IPs";
    ViewBag.navigation = "_ForumNavigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CurtAdmin.Models.BlockedIPAddress> ips = ViewBag.ips;
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.dataTables.min.js")"></script>
<div id="content_container">
    <h2 id="index_title">Blocked IP Addresses</h2>
    <table>
        <thead>
            <tr>
                <th>IP Address</th>
                <th>Date Blocked</th>
                <th>Reason</th>
                <th>Blocked By</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (CurtAdmin.Models.BlockedIPAddress ip in ips) {
                <tr>
                    <td>@ip.IPAddress</td>
                    <td>@String.Format("{0:M/d/yyyy h:mm tt}", ip.createdDate)</td>
                    <td>@ip.reason</td>
                    <td>@ip.name</td>
                    <td style="text-align: center;">
                        <a href="/Admin_Forum/RemoveIPBlock/@ip.blockID" title="Delete" class="delete">Allow</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="/Scripts/admin/ipblock.js" type="text/javascript"></script>