@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string msg = ViewBag.msg;
    if (msg == null) {
        msg = "";
    }
}
<style type="text/css">
    h2{
        float:left;
    }
    
    #addCustomer, #massUpload{
        float:right;
    }
    
    #massUpload{
        margin-top: 30px;
    }
    
</style>
@if (msg.Length > 0) {
    <script>$(function () {showMessage("@msg");});</script>
}
<div id="content_container">
    <h2>Customers Home</h2>
    <a href="/Customers/Add" title="Add Customer" id="addCustomer">
        <img src="/Content/img/addCustomer.png" alt="Add Customer" />
    </a>
    <a href="/Customers/MassUpload" title="Mass Upload" id="massUpload">
        <img src="/Content/img/mass_upload.png" alt="Mass Upload" />
    </a>
    <hr style="border-bottom:1px dotted #343434;clear:both" />

    <!-- Explain what's here (for Chris) -->
    <p>What would you like to see?</p>
    <ul>
        <li><a href="/Customers/ViewAll">View All Customers</a></li>
        <li><a href="/Customers/ViewEcommerce">View Ecommerce Customers</a></li>
        <li><a href="/Customers/ViewDealerInstaller">View Dealer/Installers</a></li>
        <li><a href="/Customers/ViewRetailers">View Retailers</a></li>
        <li><a href="/Customers/ViewOther">View Other</a></li>
        <li>View By Sales Rep: 
            <form action="/Customers/ViewBySalesRep" method="get">
                <select name="salesRepID" id="salesRepID">
                    <option value="0">- Select Sales Rep -</option>
                    @foreach (CurtAdmin.SalesRepresentative rep in ViewBag.salesreps) {
                        <option value="@rep.salesRepID">@rep.name (@rep.code)</option>
                    }
                    <input type="submit" value="View" />
                </select>
            </form>
        </li>
        <li><a href="/Customers/ViewCustomerUsers">View All Customer Users</a></li>
        <li><a href="/Customers/ViewWebProperties">View All Web Properties</a></li>
        <br />
        <li><a href="/Customers/ViewAuthModules">Manage Authorization Modules</a></li>
    </ul>


</div>
